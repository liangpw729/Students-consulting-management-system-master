<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#33b5e5"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@drawable/iv_bg"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="我的咨询"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@drawable/iv_bg"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/search" />

    </LinearLayout>

    <RadioGroup
        android:id="@+id/rg_class"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbtn_consult"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:background="@drawable/radio_selector_topic_expert"
            android:button="@null"
            android:checked="true"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="正在咨询"
            android:textColor="@drawable/radio_selector_tv_color"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/rbtn_reply"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:background="@drawable/radio_selector_topic_expert"
            android:button="@null"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="已回复"
            android:textColor="@drawable/radio_selector_tv_color"
            android:textSize="20sp" />
    </RadioGroup>

</LinearLayout>
