<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/rg_class"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbtn_explain"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:background="@drawable/radio_selector_topic_expert"
            android:button="@null"
            android:checked="true"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="说明书"
            android:textColor="@drawable/radio_selector_tv_color"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/rbtn_feedback"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:background="@drawable/radio_selector_topic_expert"
            android:button="@null"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="我要反馈"
            android:textColor="@drawable/radio_selector_tv_color"
            android:textSize="20sp" />
    </RadioGroup>

    <TextView
        android:id="@+id/tv_introduce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="该软件功能强大"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/ll_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_margin="10dp"
            android:background="@drawable/editext_bg" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_bg"
            android:text="提交"
            android:textColor="#ffffff" />
    </LinearLayout>


</LinearLayout>